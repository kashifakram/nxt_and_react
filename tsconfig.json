{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/css/*": [
        "app/styles/*"
      ],
      "@/fon/*": [
        "app/fonts/*"
      ],
      "@/cont/*": [
        "app/contexts/*"
      ],
      "@/comps/*": [
        "app/_components/*"
      ],
      "@/p/*": [
        "public/*"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types **/*.ts",
    "app/_components/TaskList.jsx",
    "app/_components/reducer.jsx",
    "app/_components/ui/Tasks.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
